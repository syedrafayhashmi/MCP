{
  "name": "issues-backend",
  "version": "1.0.0",
  "description": "Backend API for MCP Server Issue Tracker",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:migrate:prod": "node dist/db/migrate.js",
    "db:seed": "tsx src/db/seed.ts",
    "db:seed:prod": "node dist/db/seed.js",
    "db:inspect": "tsx src/db/inspect.ts",
    "db:reset": "rm -f database.sqlite && sqlite3 database.sqlite < better-auth_migrations/2025-07-11T02-30-51.059Z.sql && npm run db:migrate && npm run db:seed",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "fastify",
    "sqlite",
    "issue-tracker"
  ],
  "author": "Brian Holt & Syed Rafay Hashmi",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/static": "^8.3.0",
    "@modelcontextprotocol/sdk": "^1.16.0",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.2.12",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "fastify": "^5.4.0"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/node": "^24.0.12",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^3.2.4",
    "supertest": "^7.1.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
